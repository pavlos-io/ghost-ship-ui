<h1 class="text-2xl font-bold mb-6">New Run</h1>

<%= form_with url: runs_path, method: :post, class: "space-y-4" do |f| %>
  <div>
    <label for="prompt" class="block text-sm font-medium text-gray-700 mb-1">Prompt</label>
    <textarea
      name="prompt"
      id="prompt"
      rows="8"
      required
      class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      placeholder="Describe what you want the agent to do..."
    ></textarea>
  </div>

  <div>
    <%= f.submit "Launch Run", class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
