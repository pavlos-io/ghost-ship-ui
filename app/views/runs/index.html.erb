<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-bold">Runs</h1>
  <%= link_to "New Run", new_run_path, class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700" %>
</div>

<% if runs.any? %>
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left">
      <thead class="text-xs uppercase bg-gray-100">
        <tr>
          <th class="px-4 py-3">ID</th>
          <th class="px-4 py-3">Creator</th>
          <th class="px-4 py-3">Status</th>
          <th class="px-4 py-3 hidden sm:table-cell">Source</th>
          <th class="px-4 py-3 hidden md:table-cell">Created at</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>
      <tbody>
        <% runs.each do |run| %>
          <tr class="border-b">
            <td class="px-4 py-3"><%= run.id %></td>
            <td class="px-4 py-3"><%= run.creator %></td>
            <td class="px-4 py-3">
              <% badge_class = case run.status
                 when "queued" then "bg-yellow-100 text-yellow-800"
                 when "running" then "bg-blue-100 text-blue-800"
                 when "completed" then "bg-green-100 text-green-800"
                 when "failed" then "bg-red-100 text-red-800"
                 end %>
              <span class="<%= badge_class %> text-xs font-medium px-2 py-0.5 rounded-full"><%= run.status %></span>
            </td>
            <td class="px-4 py-3 hidden sm:table-cell"><%= run.source %></td>
            <td class="px-4 py-3 hidden md:table-cell"><%= run.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td class="px-4 py-3"><%= link_to "View", run_path(run), class: "text-blue-600 hover:underline" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-gray-500">No runs yet.</p>
<% end %>
